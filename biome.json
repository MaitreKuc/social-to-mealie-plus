{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["node_modules", ".next"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "bracketSpacing": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    },
    "globals": ["__DEV__"]
  },
  "linter": {
    "enabled": true,
    "ignore": ["node_modules"],
    "rules": {
      "complexity": {
        "noForEach": "off",
        "noUselessTypeConstraint": "off"
      },
      "style": {
        "useNumberNamespace": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
